{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{node_modules/.prisma/client/**,node_modules/@prisma/engines/**,src/features/sales/prisma/generated/client/**}"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "buildCommand": "npm run vercel-build"
}
