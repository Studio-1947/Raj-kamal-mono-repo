{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/.prisma/client/**", "node_modules/@prisma/engines/**", "src/features/sales/prisma/generated/client/**"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "src": "/", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run vercel-build"
}
